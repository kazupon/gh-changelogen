{
  "name": "gh-changelogen",
  "version": "0.2.8",
  "description": "Changelog generator for GitHub Releases",
  "keywords": [
    "github",
    "changelog",
    "release"
  ],
  "author": {
    "name": "kazuya kawaguchi",
    "email": "kawakazu80@gmail.com"
  },
  "license": "MIT",
  "funding": "https://github.com/sponsors/kazupon",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazupon/gh-changelogen.git"
  },
  "bugs": {
    "url": "https://github.com/kazupon/gh-changelogen/issues"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": "./cli.mjs",
  "files": [
    "dist",
    "*.mjs"
  ],
  "packageManager": "pnpm@7.32.2",
  "engines": {
    "node": ">= 14.18"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "prepack": "unbuild",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "release": "bumpp --commit \"release: v%s\" --push --tag",
    "fix": "run-p lint:fix format:fix",
    "format": "prettier --config .prettierrc --ignore-path .prettierignore --list-different '**/*.{js,ts,css,json,html}'",
    "format:fix": "pnpm format --write",
    "lint": "eslint --config .eslintrc.cjs --ext .js,.ts,.json .",
    "lint:fix": "pnpm lint --fix",
    "deadcode": "ts-prune -e --ignore src/index.ts"
  },
  "devDependencies": {
    "@nexhome/yorkie": "^2.0.8",
    "@types/node": "^18.7.14",
    "@types/semver": "^7.3.12",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "bumpp": "^8.2.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jiti": "^1.14.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-prune": "^0.10.3",
    "typescript": "^4.8.2",
    "unbuild": "^0.9.0",
    "vitest": "^0.30.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --config .prettierrc --ignore-path .prettierignore --write"
    ],
    "*.{js,vue}": [
      "prettier --config .prettierrc --ignore-path .prettierignore --write",
      "eslint --fix --ext .js"
    ],
    "*.ts?(x)": [
      "prettier --config .prettierrc --ignore-path .prettierignore --parser=typescript --write",
      "eslint --fix --ext .ts"
    ]
  },
  "dependencies": {
    "ohmyfetch": "^0.4.18",
    "semver": "^7.3.7",
    "zod": "^3.18.0",
    "zodiarg": "^0.2.1"
  }
}
